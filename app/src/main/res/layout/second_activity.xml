<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableRow
        android:paddingTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/dack1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CMessages"
            android:id="@+id/tv_show_name_user"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginLeft="16dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginLeft="96dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More"
            android:layout_marginLeft="32dp"
            android:textSize="20dp"
            android:textColor="@color/white"
            />
    </TableRow>

    <ListView
        android:layout_marginTop="16dp"
        android:dividerHeight="0dp"
        android:divider="@color/white"
        android:id="@+id/lv_conversation"
        android:layout_width="match_parent"
        android:layout_height="468dp"
        >
    </ListView>



    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_item_listview_type2"
        >
        <EditText
            android:id="@+id/edt_send_sms"
            android:layout_width="254dp"
            android:layout_height="42dp"
            android:layout_marginLeft="16dp"
            android:paddingTop="8dp"
            android:paddingLeft="4dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_body_sms"
            android:layout_marginRight="8dp"
            android:hint="Enter Message"
            />
        <Button
            android:id="@+id/btn_send_sms"
            android:layout_width="54dp"
            android:layout_height="42dp"
            android:text="Send"
            android:textAllCaps="false"
            android:background="@drawable/bg_buton_sms"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"

            />

    </TableRow>


</LinearLayout>