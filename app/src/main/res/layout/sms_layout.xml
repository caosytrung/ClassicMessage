<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="300dp"
    android:background="@color/blue_light1"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvSender"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/sms"
        android:text="SMS Classic"
        android:textColor="@color/green"
        android:gravity="center"
        android:drawablePadding="8dp"
        />
    <TextView
        android:id="@+id/tvSmsReceivedDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="Date gui"
        android:layout_marginRight="16dp"
        android:textColor="@color/green"
        />

    <TextView
        android:id="@+id/tvSmsReceivedBody"
        android:paddingTop="4dp"
        android:paddingBottom="8dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_body_sms"
        android:textColor="@color/black"
         />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginRight="8dp"
        android:gravity="right"
        >
        <Button
            android:id="@+id/btn_viewApp"
            android:layout_margin="8dp"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:text="View"
            android:textAllCaps="false"
            android:background="@drawable/bg_buton_sms"
            />
        <Button
            android:id="@+id/btnReplyFast"
            android:layout_margin="8dp"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:text="Reply"
            android:textAllCaps="false"
            android:background="@drawable/bg_buton_sms"
            />
        <Button
            android:id="@+id/btnClosePopup"
            android:layout_margin="8dp"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:text="Close"
            android:textAllCaps="false"
            android:background="@drawable/bg_buton_sms"
            />
    </TableRow>

</LinearLayout>